    <!--  BUTTON ADD STYLE  -->
    <Style x:Key="ButtonAdd" TargetType="Button">

        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="#1D1D21" />
        <Setter Property="Cursor" Value="Hand" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">

                    <Border
                        x:Name="circle"
                        Background="{StaticResource Gradient}"
                        BorderBrush="#FFFFFF"
                        BorderThickness="1"
                        CornerRadius="45">
                        <Grid>
                            <Rectangle
                                x:Name="Rec1"
                                Width="7"
                                Height="45"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Fill="White" />
                            <Rectangle
                                x:Name="Rec2"
                                Width="45"
                                Height="7"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Fill="White" />
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="circle" Property="Background" Value="#FFFFFF" />
                            <Setter TargetName="Rec1" Property="Fill" Value="#1D1D21" />
                            <Setter TargetName="Rec2" Property="Fill" Value="#1D1D21" />
                            <Setter TargetName="circle" Property="BorderBrush" Value="#1D1D21" />
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="circle" Property="Background" Value="#B6B7BA" />
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

